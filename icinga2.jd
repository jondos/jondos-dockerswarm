#!/usr/local/bin/jondocker

image jordan/icinga2

network extern

port 5665:5665

params -h monitor.anonymous-proxy-servers.net

map $HOME/icinga2_files/conf to /etc/icinga2
map $HOME/icinga2_files/db to /var/lib/mysql
map $HOME/icinga2_files/icinga2 to /var/lib/icinga2

function post_startup {
	docker cp icinga2/monitor.anonymous-proxy-servers.net nginxproxy:/etc/nginx/vhost.d
}
