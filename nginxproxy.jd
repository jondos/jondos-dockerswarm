#!/usr/local/bin/jondocker

image jwilder/nginx-proxy

network extern

map /var/run/docker.sock to /tmp/docker.sock:ro
map nginxproxy_certs     to /etc/nginx/certs:rr
map nginxproxy_vhosts    to /etc/nginx/vhost.d
map nginxproxy_html      to /usr/share/nginx/html

port 80:80
port 443:443

params --label com.github.jrcs.letsencrypt_nginx_proxy_companion.nginx_proxy=true


